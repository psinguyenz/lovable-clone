enum MessageRole {
  USER
  ASSISTANT
}

enum MessageType {
  RESULT
  ERROR
}

model Message {
  id String @id @default(uuid())
  content String
  role MessageRole
  type MessageType
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt // a decorator that update this field when we update the message model

  // The message doesn't have to have a fragment (the "?" marked as optional)
  // If the user sending a message, there will be no fragment, only for the AI response
  fragment Fragment?
}

model Fragment {
  id String @id @default(uuid())
  messageId String @unique
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  // Cascade means if the message gets deleted, the fragment gets deleted

  sandboxUrl String
  title String
  files Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}